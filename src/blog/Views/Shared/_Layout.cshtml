
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using blog.Models

@inject UserManager<ApplicationUser> _userManager
@inject SignInManager<ApplicationUser> _signInManager
  

@{ 

  var admin = User.IsInRole("Admins");  // get this the real way eventually
  var author = User.IsInRole("Authors");
}
<!doctype html>

<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link type="text/css" rel="stylesheet" asp-href-include="lib/simplemde/dist/simplemde.min.css" />
    <link type="text/css" rel="stylesheet" asp-href-include="css/main.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/highlight.js/9.9.0/styles/default.min.css">
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">Bagombo</div>
            </div>
            <div class="collapse navbar-collapse" id="navbar1">
                <ul class="nav navbar-nav">
                    <li class="@((string)(ViewContext.RouteData.Values["action"]) == "Index" ? "active" : "")"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="@((string)(ViewContext.RouteData.Values["action"]) == "Features" ? "active" : "")"><a asp-controller="Home" asp-action="Features">Features</a></li>
                    <!--li class="hidden-md hidden-sm @((string)(ViewContext.RouteData.Values["action"]) == "RecentPosts" ? "active" : "")"><a asp-controller="Home" asp-action="RecentPosts">Recent Posts</a></li>-->
                    <li class="hidden-sm @((string)(ViewContext.RouteData.Values["action"]) == "AllPosts" ? "active" : "")"><a asp-controller="Home" asp-action="AllPosts">All Posts</a></li>
                </ul>
                <form class="navbar-form navbar-left input-group-sm" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default" asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-search"></span></button>
                </form>
                @await Html.PartialAsync("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    @if (admin == true)
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin Tools <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Admin" asp-action="ManagePosts">Manage Posts</a></li>
                            <li><a asp-controller="Admin" asp-action="ManageFeatures">Manage Features</a></li>
                            <li><a asp-controller="Admin" asp-action="ManageCategories">Manage Categories</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="Admin" asp-action="ManageUsers">Manage Users</a></li>
                        </ul>
                    </li>
                    }
                    @if (author == true)
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Author Tools <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Author" asp-action="ManagePosts">Manage Posts</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="Author" asp-action="AddPost">Add New Post</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="Author" asp-action="AddPost">Edit Profile</a></li>
                        </ul>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

        @RenderBody()

    <div class="center-text">
        <hr />
        &copy; 2017
        <br />
        <br />
    </div>

    <script type="text/javascript" asp-src-include="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" asp-src-include="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="//cdn.jsdelivr.net/highlight.js/9.9.0/highlight.min.js"></script>
    <script type="text/javascript" src="~/js/JavaScript.js"></script>
    
</body>
</html>