@using blog.Models.ViewModels.Author
@model EditBlogPostViewModel

@{
  Layout = "_Layout";
}

<div class="container-fluid">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Edit Post</h3></div>
            <div class="panel-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="EditPost" method="post">
                    <div class="form-group">
                        <label asp-for="Title">Title:</label>
                        <input class="form-control" asp-for="Title" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description:</label>
                        <input class="form-control" asp-for="Description" />
                    </div>
                    <br />
                    <div class="form-group">
                        <textarea asp-for="Content"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="ManagePosts" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/simplemde/dist/simplemde.min.js"></script>

<script type="text/javascript">
    var simplemde = new SimpleMDE();
</script>

