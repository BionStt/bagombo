@{
  ViewData["Title"] = "Manage Features";
  Layout = "_Layout";
}
@using blog.Models.ViewModels.Admin
@model AdminManageFeaturesViewModel



<div class="container-fluid">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Admin - Manage Features</h3></div>
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feature in Model.Features)
                        {
                            var cid = $"a{feature.Id}";
                        <tr id="@feature.Id">
                            <td>@feature.Title</td>
                            <td>@feature.Description</td>
                            <td>
                                <form asp-controller="Admin" asp-action="DeleteFeature" asp-route-id="@feature.Id" method="post">
                                    <span class="text-nowrap">
                                        <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="EditFeature" asp-route-id="@feature.Id">Edit</a>
                                        <button class="btn btn-danger btn-sm delpost" type="submit">Delete</button>
                                    </span>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-primary" asp-controller="Admin" asp-action="AddFeature">Add Feature</a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
